<?xml version="1.0" encoding="utf-8"?>

<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/wear_main_layout" style="@style/wear_layout">

    <FrameLayout style="@style/wear_inner_layout">

        <LinearLayout style="@style/wear_inner_inner_layout">

            <LinearLayout style="@style/wear_buttons_layout">
                <ImageButton android:id="@+id/wear_adjust_volume_mute_button" android:src="@drawable/ic_volume_mute_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
                <ImageButton android:id="@+id/wear_adjust_volume_down_button" android:src="@drawable/ic_volume_down_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
                <ImageButton android:id="@+id/wear_adjust_volume_up_button" android:src="@drawable/ic_volume_up_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
            </LinearLayout>

            <LinearLayout style="@style/wear_buttons_layout">
                <ImageButton android:id="@+id/wear_previous_button" android:src="@drawable/ic_skip_previous_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
                <ImageButton android:id="@+id/wear_play_button" android:src="@drawable/ic_play_arrow_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
                <ImageButton android:id="@+id/wear_next_button" android:src="@drawable/ic_skip_next_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
            </LinearLayout>

            <LinearLayout style="@style/wear_buttons_layout">
                <ImageButton android:id="@+id/wear_seek_back_button" android:src="@drawable/ic_fast_rewind_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
                <ImageButton android:id="@+id/wear_launch_quit_button" android:src="@drawable/ic_power_settings_new_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
                <ImageButton android:id="@+id/wear_seek_forward_button" android:src="@drawable/ic_fast_forward_white_36dp" android:onClick="onButtonClick" android:contentDescription="@string/image_content_description" style="@style/wear_button"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>